@{
    ViewBag.Title = "Home Page";
}
 @*//razor*@
<div class="row carousel-holder">
    <dv class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">

                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="~/Images/carousel2.jpg" alt="">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/Images/carousel3.jpg" alt="">
                </div>

@foreach (var pie in Model)
{
                <div class="item">
                    <img class="slide-image" src="~/img/@pie.imageurl" alt="@pie.name">
                </div>
}
                @*<div class="item">
                    <img class="slide-image" src="~/Images/carousel3.jpg" alt="">
                </div>*@
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </dv>
</div>
<h4>Our sweets selection -  for you!</h4>

<div class="row">

    @foreach (var pie in Model)
    {
        
        <div class="col-sm-4 col-lg-4 col-md-4">
  
            <div class="thumbnail">

@try
{
    if (pie.imageurl.Length > 0)
    {
              
                   <img src="~/img/@pie.imageurl" class="img-thumbnail" style=" width:100%; height:301px "  alt="@pie.name" />
               
               }
               }
               catch
               {

               <div>
                   <img src="~/Images/bethanylogo.png" class="img-thumbnail" style=" width:100%; height:301px "  alt="no image available" />
               </div>

               }
                @*<img src="~/img/@pie.imageurl" class="img-thumbnail" width="327" height="327" alt="@pie.name">*@
                <div class="caption">
                    <p class="pull-right">
                        @pie.name   |  السعر 
                   
                     :  @pie.prce ج
                   | @pie.category.name|

                    </p>
                  
                    @*<p> @pie.prce</p>*@
                   
                    @*<p>@pie.details</p>*@

                    @*@Html.ActionLink("Details", "Details","pies", new { id = pie.Id })*@
                   
               </div>
                <center>
                    @Html.ActionLink("Details", "Details", "pies", new { id = pie.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Order Now", "OrderNow", "ShoppingCartItems", new { id = pie.Id }, new { @class = "btn btn-primary" })
                    @*<p class="button">
                        <a class="btn btn-primary" href="~/ShoppingCartItems/AddToCart/@pie.Id">Add to cart</a>
                    </p>*@
                </center>
            </div>
        </div>
    }
      <br />
    <br />
    <br />
</div>
